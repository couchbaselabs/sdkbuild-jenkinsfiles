<% # vim: ft=eruby et ts=4 sw=4 sts=4
openssl_ver = '1.1.1d-cb1'
windows_dists = [
    [2015, 14, 64, false],
    # [2015, 14, 32, false],
    [2017, 15, 64, true],
    # [2017, 15, 32, false],
]
centos_dists = [
    [7, 'x86_64', 64],
]

ubuntu_dists = [
    ['bionic', 'amd64', 'ubuntu1804', 64],
    # ['bionic', 'i386', 'ubuntu1804', 32],
    ['buster', 'amd64', 'debian10', 64],
    # ['buster', 'i386', 'debian10', 32],
]

